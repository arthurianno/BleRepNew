<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DataFrag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadingData.ReadingDataFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@id/buttonWRData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Ваш контент, который может прокручиваться, например, RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dataRecView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="?attr/actionBarSize"
            app:layout_constraintBottom_toTopOf="@id/buttonWRData"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/buttonWRData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Записать данные"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonRDData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cчитать данные"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
