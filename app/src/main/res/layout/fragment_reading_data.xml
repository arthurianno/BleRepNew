<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DataFrag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadingData.ReadingDataFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttonWRData"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <!-- Ваш контент, который может прокручиваться, например, RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dataRecView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="?attr/actionBarSize" />
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/buttonWRData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Записать данные"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/buttonRDData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cчитать данные"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp" />

</RelativeLayout>

