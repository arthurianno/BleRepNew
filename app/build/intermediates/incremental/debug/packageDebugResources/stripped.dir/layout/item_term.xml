<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/marginSmall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/nameOfAtributeData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Name of atribute" />

    <TextView
        android:id="@+id/nameOfData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginSmall"
        android:layout_below="@id/nameOfAtributeData"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="Name of Data" />

    <TextView
        android:id="@+id/textViewAttribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/nameOfAtributeData"
        android:layout_alignBottom="@id/nameOfData"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:text="Атрибут"
        android:textColor="@android:color/darker_gray" />

</RelativeLayout>
